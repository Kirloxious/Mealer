<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/buttonRemoveRepas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RepasActivityotd">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titreId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Les Repas Du Jour"
            android:textAllCaps="true"
            android:textSize="16sp" />

        <ListView
            android:id="@+id/listeRepasDuJourId"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

        <Button
            android:id="@+id/btnDelFromOtd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remove Meal from Daily Meal" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>