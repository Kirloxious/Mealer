<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.BanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cuisiner to ban" />

        <EditText
            android:id="@+id/cuisinierId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="email followed by  [date / &quot;permanent&quot;]"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complaint Id to dismiss" />

        <EditText
            android:id="@+id/complaintId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="complaint id to dismiss"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/banAndDismiss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ban and Dismiss" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>