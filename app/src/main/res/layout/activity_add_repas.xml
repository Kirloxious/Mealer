<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddRepasActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/addRepasText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adding a Meal"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/nomRepasTitre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name of Meal" />

        <EditText
            android:id="@+id/nomRepasPlainText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ' "
            android:ems="10"
            android:hint="Name"
            android:includeFontPadding="false"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/nomTypeTitre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/typeDeRepasPlainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ' "
                android:ems="10"
                android:hint="Type of Meal"
                android:inputType="textPersonName"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/typeDeCuisinePlainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ' "
                android:ems="10"
                android:hint="Type of Cuisine"
                android:inputType="textPersonName"
                android:minHeight="48dp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/ingredientsTitre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="List of Ingredients" />

        <EditText
            android:id="@+id/ingredientsTextMultiLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Ingredients"
            android:inputType="textMultiLine"
            android:minHeight="48dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/prixTitre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price (CAD)" />

        <EditText
            android:id="@+id/prixNumberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="1234567890."
            android:ems="10"
            android:hint="Price ($)"
            android:inputType="number|numberDecimal"
            android:minHeight="48dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/allergiesTitre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="List of Allergies" />

        <EditText
            android:id="@+id/allergiesTextMultiLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Allergies"
            android:inputType="textMultiLine"
            android:minHeight="48dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/descriptionTitre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description of Meal" />

        <EditText
            android:id="@+id/descriptionTextMultiLine"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/buttonAddRepas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Meal" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>